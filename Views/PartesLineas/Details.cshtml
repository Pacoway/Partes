        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IDParte)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IDParte)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ResumenTecnicos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResumenTecnicos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ResumenVehiculos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResumenVehiculos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.VerHoraInicio)
        </dt>
        <dd>
