        <dt>
            @Html.DisplayNameFor(model => model.UsuarioCreacion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UsuarioCreacion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd>
            @Html.FormatValue(Model.FechaCreacion,"{0:dd/MM/yyyy HH:mm:ss}")
        </dd>
    </dl>
</div>
<h4>Histórico</h4>
<table class="table">
    <tr>
        <th>
            Fecha de Actualización            
        </th>
        <th>
            Descripción
        </th>
        <th>
            Usuario
        </th>
    </tr>

    @foreach (var item in Model.HistoricosPartesLineas)
    {
        <tr>
            <td>
                @String.Format("{0:dd/MM/yyy HH:mm:ss}", item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
        </tr>
    }

</table>

<p>
    <button type="button" onclick='window.location = "../Edit/@Model.Id?idParte=@Model.IDParte"'>
        <i class="glyphicon glyphicon-pencil"></i> Editar
    </button>
    <button type="button" onclick='window.location = "../../Partes/Details/@Model.IDParte"'>
        <i class="glyphicon glyphicon-list-alt"></i> Listado
    </button>
</p>
